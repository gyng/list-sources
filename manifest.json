{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.0.1",
  "default_locale": "en",

  "developer": {
    "name": "Ng Guoyou",
    "url": "https://github.com/gyng/list-sources"
  },

  "homepage_url": "https://github.com/gyng/list-sources",

  "background": {
    "scripts": ["src/background/index.js"]
  },
  "permissions": [
    "<all_urls>",
    "activeTab",
    "tabs",
    "contextMenus",
    "downloads",
    "notifications",
    "storage"
  ],

  "browser_action": {
    "default_icon": {
      "16": "icons/ic_photo_library_black_48dp_1x.png",
      "32": "icons/ic_photo_library_black_48dp_1x.png"
    }
  },

  "icons": {
    "48": "icons/ic_photo_library_black_48dp_1x.png",
    "96": "icons/ic_photo_library_black_48dp_2x.png",
    "128": "icons/ic_photo_library_black_48dp_2x.png"
  }
}
